{
  "name": "bridge",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && rm -rf dist && vite build",
    "deploy": "sh scripts/publish.sh",
    "dev": "vite",
    "postinstall": "npm-check-updates -u --deep && pnpm lint",
    "lint": "pnpm run lint:stylus && pnpm run lint:ts && pnpm run lint:eslint",
    "lint:eslint": "eslint . --fix",
    "lint:stylus": "stylus-supremacy format ./**/*.styl  --options ./stylus-supremacy.json --replace",
    "lint:ts": "prettier --config .prettierrc.lint-only.json --write .",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "preview": "vite preview",
    "ssl": "mkcert -key-file key.pem -cert-file cert.pem bridge.starswap.xyz"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --config .prettierrc.lint-only.json --write"
    ],
    "*.styl": [
      "stylus-supremacy format --options ./stylus-supremacy.json --replace"
    ],
    "*.{json,md}": [
      "prettier --config .prettierrc.lint-only.json --write"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.16.0",
    "idmp": "^4.0.1",
    "immer": "^11.1.3",
    "json-web3": "^1.3.4",
    "lodash-es": "^4.17.23",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.13.0",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylus": "^0.64.0",
    "stylus-supremacy": "^5.0.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "npm:rolldown-vite@7.3.1",
    "vite-node": "^5.3.0",
    "vite-plugin-html-minifier": "^1.0.5",
    "vite-plugin-mkcert": "^1.17.9"
  },
  "engines": {
    "node": "25"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.3.1"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
